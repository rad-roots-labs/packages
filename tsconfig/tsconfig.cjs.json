{
  "extends": "./tsconfig.esm.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "dist/cjs",
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "node_modules/.cache/tsc.cjs.tsbuildinfo"
  },
  "exclude": ["node_modules", "dist", "**/dist"]
}
